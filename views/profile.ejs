<%- include('partials/header'); -%>
<%- include('partials/sidenav'); -%>
    <title>Post</title>
    <style>
      h1{
        color: #2c3e50;
        margin-bottom: 2rem;
      }
      .btn-circle.btn-md {
            width: 35px;
            height: 35px;
            padding: 4px 09px;
            border-radius: 30px;
            font-size: 17px;
            text-align: center;
        }
    </style>

  <div class="container text-center">
      <h1 class="text-center display-3"><i class="fa fa-id-card"> Teacher's Informations</i></h1>
    <div class="row justify-content-center">
       <% if(posts.length > 0) { %>
       <% posts.forEach(post => { %>
         <div class="row my-2">
           <div class="col-lg-4">
             <div class="card mx-2 border-secondary" style="width: 20rem; height: 100%;">
               <div class="card-header text-muted"><b><em>Name: <%= post.name%></em></b></div>
                 <div class="card-body text-secondary">
                      <li>Email: <%= post.email%></li>
                      <li>Contact: <%= post.contact%></li>
                      <li>Department:
                        <%=post.department.substring(0, 50)+"...."%>
                           <a href="/post/<%=post._id%>">View More</a>
                      </li>
                  </div>
                <div class="d-flex justify-content-between">
                    <a href="/post/update/<%=post._id%>" class="btn btn-outline-primary btn-circle btn-md mx-2 my-1" title="UPDATE"><i class="fa fa-check-square-o"></i></a>
                      <form action="/post/delete/<%=post._id%>" method="POST">
                          <button class="btn btn-outline-danger btn-circle btn-md mx-2 my-1" title="DELETE"><i class="fa fa-trash"></i></button>
                      </form>
                </div>
              </div>
            </div>
        </div>
        <% }); %>
        <% } else { %>
          <h1 class="text-center text-danger mt-3 display-4">Informations is not set yet...</h1>
        <% } %>
      </div>
  </div>

</body>
</html>

<%- include('partials/header'); -%>
<title>Create Post</title>
<%- include('partials/sidenav'); -%>
<style>
body {
  font-family: Arial;
  font-size: 17px;
}
.row {
  margin: 0 auto;
}
.container {
  background-color: #f2f2f2;
  padding: 5px 20px 15px 20px;
  border: 2px solid lightgrey;
  border-radius: 3px;
  width: 640px;
  margin-bottom: 5px;
}

input[type=text],[type=date],[type=number]{
  width: 100%;
  margin-bottom: 20px;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 3px;
}
label {
  margin-bottom: 10px;
  display: block;
}

.icon-container {
  margin-bottom: 20px;
  padding: 7px 0;
  font-size: 24px;
}

</style>
    <div class="container my-2">
        <div class="row my-3">
            <div class="col-md-12">
              <h3 style="text-align: center;"><%=name%></h3><hr>
              <% if(update) { %>
              <form action="/post/update/<%=singlePost._id%>" method="POST">
              <% } else { %>
              <form action ="/compose" method="POST">
                <% } %>
                  <div class="form-group">
                      <label class="form-control-label"><i class="fa fa-user-graduate"></i> Teacher's Name:</label>
                      <input class="form-control" type="text" name="tname" value="<%=singlePost.name%>"
                      placeholder="Mr. Kamrul Islam" required autofocus>
                      <div class="valid-feedback">Valid.</div>
                      <div class="invalid-feedback">Please fill out email field.</div>
                  </div>

                  <div class="form-group">
                      <label class="form-control-label"><i class="fa fa-envelope" aria-hidden="true"></i> Email:</label>
                      <input class="form-control" name="temail" type="text" value="<%=singlePost.email%>"
                      placeholder="hridoy@gmail.com" required>
                      <div class="valid-feedback">Valid.</div>
                      <div class="invalid-feedback">Please fill out email field.</div>
                  </div>

                  <div class="form-group">
                      <label class="form-control-label"><i class="fa fa-phone" aria-hidden="true"></i> Contact:</label>
                      <input class="form-control" name="tcontact" type="number" value="<%=singlePost.contact%>"
                      placeholder="01xxxxxxxxx" required>
                      <div class="valid-feedback">Valid.</div>
                      <div class="invalid-feedback">Please fill out email field.</div>
                  </div>

                  <div class="form-group">
                      <label class="form-control-label"><i class="fa fa-building-o" aria-hidden="true"></i> Department:</label>
                      <input class="form-control" name="tdepartment" type="text" value="<%=singlePost.department%>"
                      placeholder="CSE, BBA etc" required>
                      <div class="valid-feedback">Valid.</div>
                      <div class="invalid-feedback">Please fill out email field.</div>
                  </div>

                  <div class="form-group">
                    <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                    <input type="text" id="address" name="taddress" value="<%=singlePost.address%>"
                    placeholder="825 1st Street">
                  </div>
                  <button class="btn btn-danger btn-lg btn-block" value="post" type="submit">Register</button>
              </form>
          </div>
      </div>
    </div>
